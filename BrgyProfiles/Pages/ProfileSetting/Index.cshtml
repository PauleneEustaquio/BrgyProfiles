@page
@model BrgyProfiles.Pages.ProfileSetting.IndexModel

@{
    ViewData["Title"] = "Index";
}
<style>
    .ln{
        background-color:darkgreen;
    }
    .op{
       
color:white;
font-size:15px;
    }
    .in{
        color:white;
font-size:70px;
    }
</style>
<body class="ln">
<h1 class="in">RESIDENT'S PROFILE</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="op">
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class[0].Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Class) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>